<script type="text/ng-template" id="addRule.html">
    <div class="rcmuser">
        <div class="admin-acl">
            <div class="modal-header">
                <h3 class="modal-title">Add rule: </h3>
            </div>
            <div class="modal-body">
                <div rcm-alerts rcm-results="alerts" alert-title="'An error occured:'"></div>
                <form name="addRuleForm" role="form">
                    <div class="form-group">
                        <label for="rule">Rule: </label>
                        <select class="form-control" name="rule" ng-model="ruleData.rule" required="true">
                            <option selected="true" value="allow">allow</option>
                            <option value="deny">deny</option>
                            <!--<option value="ignore">ignore</option>-->
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="roleId">Role: </label>

                        <div name="roleId" class="roleId">{{ruleData.roleId}}</div>
                    </div>

                    <div class="form-group">

                        <label for="resource">Resource: </label>
                        <input
                            class="form-control"
                            name="resourceQuery"
                            ng-focus="toggleDropdown($event, true)"
                            ng-click="toggleDropdown($event, true)"
                            ng-model="ruleData.resourceId"
                            placeholder="Enter resource id"
                            required="true"
                            type="text"
                            />

                        <div class="list-dropdown" ng-show="status.isopen" ng-mouseleave="toggleDropdown($event, false)">
                            <ul class="list-group">
                                <li class="list-group-item" ng-repeat="resource in resources | resourceFilter:ruleData.resourceId">
                                    <a href ng-click="ruleData.resourceId = resource.resource.resourceId; toggleDropdown($event, false)">
                                        <div class="title">{{resource.resource.name}}</div>
                                        <div>({{resource.resource.resourceId}})</div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="privilege">Privilege: </label>
                        <select class="form-control" name="privilege" ng-model="ruleData.privilege" required="true">
                            <option selected="selected" value="">*ALL*</option>
                            <option ng-repeat="priv in resources[ruleData.resourceId].resource.privileges" value="{{priv}}">{{priv}}</option>
                        </select>
                    </div>
                </form>

            </div>

            <div class="modal-footer">
                <div class="loading" ng-show="loading">LOADING...</div>
                <div ng-hide="loading">
                    <button class="btn btn-primary btn-xs" ng-disabled="loading" ng-click="addRule()">Add Rule</button>
                    <button class="btn btn-warning btn-xs" ng-click="cancel()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</script>

